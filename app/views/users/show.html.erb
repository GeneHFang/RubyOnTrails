<h1><%="#{@user.name}'s page'"%></h1>

<%= link_to "Log Out", logout_path, method: :delete %>

<%= link_to "Recruit new Explorer", new_explorer_path(TESTID: @id)%>
<h2>My Explorers : </h2><br>

<%if @user.explorers[0] %>
    <% @user.explorers.each do |explorer| %>
    <%= link_to explorer.name, explorer_path(explorer) %>
    <% end %>
    <%else %>
    <p> You don't have any explorers yet </p>
<% end %>



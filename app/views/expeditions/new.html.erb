<%if flash[:error]%>
    <% flash[:error].each do |error|%>
        <%=error%>
    <% end %>
<% end %>

<%=form_for @expedition do |f|%>

<%= f.label "Location"%>
<%= f.collection_select :place_id, @places, :id, :name%>
<br>
<%= f.label "Rent Weapon?"%>
<%= f.check_box :hasWeapon %>
<br>
<%= f.label "Hire Yoan as Guide?"%>
<%= f.check_box :hasGuide%>

<%= hidden_field_tag :explorerID, @explorer_id %>
<br> 

<%= f.submit%>

<% end %>
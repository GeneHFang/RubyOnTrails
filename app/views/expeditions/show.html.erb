<div class='exped'>
<%unless @over %>
    <%= image_tag @img, class:"img" %><br>
    Expedition at <%= @place.name %> <br>
    Rations <%= @explorer.rations > 0 ? @explorer.rations : 0 %><br>


    <% if @dname  %>
    <%= "You found #{@dname}"%>
    <% end %>
   
    <% if @trophy%>
        <%@trophy.each { |g| %> 
        <p> <%=g%> </p>
        <%}%>
    <% end %>
    <br>
    
    <% if @guide %>
        <%@guide.each { |g| %>
        <p> <%=g%></p>
        <%}%>

    <% end %>
    <% if @expedition.hasWeapon%>
    <%= "Carrying a weapon"%>
    <% end %>
    <br>
    <% if @expedition.hasGuide%>
    <%= "Being guided"%><br>
    <% end %>
<br>

    <!--Logic for sending back to current page with new params-->
    <% unless @explored%>
    <%= button_to "Explore", expedition_path(@expedition), method: :get, params: {explore: true}%>
    <% end %>
    <%= button_to "Press Forward", expedition_path(@expedition), method: :get, params: {move_on: true}%>
    <br>
    
    

<%else %> 
    <%= image_tag @img, class:"img"%><br>
    <%if @explorer.rations < 1%>
    You're out of food!
    <%else%>
    Good Job!
    <% end %>
    <%= button_to "Go Home", explorer_path(@explorer), method: :get%>
<%end%>
</div>